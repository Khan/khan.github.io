
        <div class="card-content" data-repo="{{projectSlug}}">
            <div class="icon">
                <div class="logo" style="background-image: url('{{projectLogo}}')"></div>
            </div>
            <div class="content">
                <div class="language">
                    {{language}}
                </div>
                <div class="title">
                    {{projectName}}
                </div>
                <div class="updated">
                    Updated <span class="updated-ago">recently</span>
                </div>
                <div class="description">
                    {{description}}
                </div>
                <div class="actions">
                    <a href="http://github.com/Khan/{{projectSlug}}" class="button">
                        View
                        <span class="sr-only">{{projectName}}</span>
                        on GitHub
                    </a>
                </div>
            </div>
            <div class="activity"></div>
        </div>
